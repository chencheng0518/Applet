<view class="home">
    <!-- 搜索框开始 -->
    <SearchInput></SearchInput>
    <!-- 搜索框结束 -->

    <!-- 轮播图开始 -->
    <!-- 
            1、swiper标签存在默认的宽高
                100% * 150px
            2、image标签页存在默认的宽高
                320px * 240px
            3、设计图片和轮播图
                1、先看一下原图的宽高 750 * 340
                2、让图片的高度自适应，宽度等于100%
                3、让swiper标签的高度 变成和图片一样高即可
            4、图片标签
                mode属性 渲染模式
                    widthFix 让图片的标签宽高 和图片标签的内容都等比例的发生变化
         -->
    <view class="home_swiper">
        <swiper autoplay indicator-dots circular>
            <swiper-item 
            wx:for="{{swiperList}}" 
            wx:key="goods_id"
            >
                <navigator>
                    <image 
                    mode="widthFix" 
                    src="{{item.image_src}}"
                    ></image>
                </navigator>
            </swiper-item>
        </swiper>
    </view>
    <!-- 轮播图结束 -->

    <!-- 分类导航开始 -->
    <view class="home_sort">
        <navigator 
        wx:for="{{sortList}}" 
        wx:key="name"
        >
            <image 
            mode="widthFix" 
            src="{{item.image_src}}"
            ></image>
        </navigator>
    </view>
    <!-- 分类导航结束 -->

    <!-- 楼层开始 -->
    <view class="home_floor">
        <view class="floor_content" 
        wx:for="{{floorList}}" 
        wx:key="name" 
        wx:for-item="item1" 
        wx:for-index="index1"
        >
            <view class="content_img">
                <image 
                mode="widthFix" 
                src="{{item1.floor_title.image_src}}"
                ></image>
            </view>
            <view class="content_png">
                <navigator 
                wx:for="{{item1.product_list}}" 
                wx:key="name" 
                wx:for-item="item2" 
                wx:for-index="index2"
                >
                    <image 
                    mode="{{index2===0?'widthFix':'scaleToFill'}}" 
                    src="{{item2.image_src}}"
                    ></image>
                </navigator>
            </view>
        </view>
    </view>
    <!-- 楼层结束 -->
</view>