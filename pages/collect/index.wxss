page {
  background-color: #f3f4f6;
}
.collect_title {
  display: flex;
  padding: 30rpx;
}
.collect_title .title_item {
  border: 1rpx solid #000;
  padding: 10rpx;
  background-color: #fff;
  margin-left: 20rpx;
}
.collect_title .whole {
  border: 1rpx solid var(--themeColor);
  color: var(--themeColor);
}
.collect_info_wrap {
  background-color: #fff;
}
.collect_info_wrap .collect_datail {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.collect_info_wrap .collect_datail .item_image {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_info_wrap .collect_datail .item_image image {
  width: 70%;
}
.collect_info_wrap .collect_datail .item_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 20rpx;
}
.collect_info_wrap .collect_datail .item_info .info_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_info_wrap .collect_datail .item_info .info_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
