page {
  padding-bottom: 90rpx;
}
.cart .address_button {
  margin-top: 20rpx;
  padding: 20rpx;
}
.cart .address_button button {
  font-weight: 500;
  width: 60%;
}
.cart .address_detail {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.cart .address_detail .name_telephone {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart .shopping .shopping_title {
  height: 90rpx;
  font-size: 38rpx;
  color: var(--themeColor);
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1px solid var(--themeColor);
  border-top: 1px solid var(--themeColor);
}
.cart .shopping .shopping_cart_item {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
}
.cart .shopping .shopping_cart_item .item_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .shopping .shopping_cart_item .item_img_wrap image {
  width: 80%;
}
.cart .shopping .shopping_cart_item .item_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart .shopping .shopping_cart_item .item_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart .shopping .shopping_cart_item .item_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart .shopping .shopping_cart_item .item_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 36rpx;
}
.cart .shopping .shopping_cart_item .item_info_wrap .goods_price_wrap .goods_num_tool {
  display: flex;
  justify-content: space-between;
}
.cart .shopping .shopping_cart_item .item_info_wrap .goods_price_wrap .goods_num_tool .goods_num {
  padding: 10rpx;
}
.cart .cart_bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1px solid #ccc;
}
.cart .cart_bottom .bottom_total {
  flex: 3;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  font-weight: 600;
  padding-right: 20rpx;
}
.cart .cart_bottom .bottom_total .total_price text {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart .cart_bottom .bottom_settlement {
  flex: 2;
  background-color: #eb4450;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}
